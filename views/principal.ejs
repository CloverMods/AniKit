    function getURLParams() {
            const searchParams = new URLSearchParams(window.location.search);
            const username = searchParams.get('username');
            const key = searchParams.get('key');
            return { username, key };
        }

        // Fun√ß√£o para redirecionar o usu√°rio para o perfil com a chave e o nome do usu√°rio
        function redirectToProfile() {
            const { username, key } = getURLParams();
            if (username && key) {
                const profileUrl = `/perfil/${username}?key=${key}`;
                window.location.href = profileUrl;
            } else {
                alert('Nome de usu√°rio ou chave n√£o fornecidos na URL.');
